<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RegisterActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="20dp"
        android:text="Agrega la información"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/btnRegister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <EditText
            android:id="@+id/edtUserName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_rounded_edit_text"
            android:hint="Nombre"
            android:inputType="text"
            android:paddingHorizontal="15dp" />

        <EditText
            android:id="@+id/edtUserLastName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_rounded_edit_text"
            android:hint="Apellidos"
            android:inputType="text"
            android:paddingHorizontal="15dp" />

        <TextView
            android:id="@+id/tvLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:text="Asegúrate de que coincide con el nombre que aparece en tu identificación oficial"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/edtFechaNacimiento"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_rounded_edit_text"
            android:hint="Fecha de nacimiento"
            android:inputType="date"
            android:paddingHorizontal="15dp" />
        <TextView
            android:id="@+id/tvFechaNacimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:text="Debes tener al menos 18 años para registrarte como anfitrión"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_rounded_edit_text"
            android:hint="Correo electrónico"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="15dp" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:text="Te enviaremos una confirmación de reservación por correo electrónico"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_rounded_edit_text"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:paddingHorizontal="15dp" />

        <EditText
            android:id="@+id/edtPassword2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_rounded_edit_text"
            android:hint="Repetir contraseña"
            android:inputType="textPassword"
            android:paddingHorizontal="15dp" />

        <TextView
            android:id="@+id/tvCondicionesDeUso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:text="Al seleccionar Aceptar y continuar, confirmo que estoy de acuerdo con: Terminos de servicio, Politica de privacidad de datos de Tampus"
            android:textSize="15dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/background_rounded_edit_text"
        android:text="Aceptar y continuar"
        android:textAllCaps="false"
        android:textColor="@color/light_font"
        app:backgroundTint="#F44336"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>